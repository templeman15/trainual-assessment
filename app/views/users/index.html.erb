<div class="row">
  <div class="col-sm-6">
    <h1>Users</h1>
  </div>
  <div class="col-sm-6">
    <%= search_form_for @search do |f| %>
      <div class="input-group mt-2">
        <%= f.text_field :search_cont, placeholder: 'Name/Email/Phone', class: 'form-control' %>
        <div class="input-group-append">
          <%= f.submit 'Search', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<table class="table table-dark table-striped table-hover">
  <thead>
  <tr>
    <th scope="col"><%= sort_link(@search, :updated_at, 'Last Updated', {}, class: 'text-white') %></th>
    <th scope="col"><%= sort_link(@search, :name, {}, class: 'text-white') %></th>
    <th scope="col"><%= sort_link(@search, :email, {}, class: 'text-white') %></th>
    <th scope="col"><%= sort_link(@search, :title, {}, class: 'text-white') %></th>
    <th scope="col"><%= sort_link(@search, :phone, {}, class: 'text-white') %></th>
    <th scope="col"><%= sort_link(@search, :status, {}, class: 'text-white') %></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.updated_at.strftime("%m/%d/%Y - %I:%M%p") %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.title %></td>
      <td><%= user.phone %></td>
      <td class=<%= "#{status_color(user)}" %>><%= user.status %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) %>
